curl --silent --show-error -H "${requestedBy}" -X PUT -d '$hdpRepo' -u admin:admin $arguments.repositoriesHdpUrl
#end

#if($arguments.hdpUtilsBaseUrl != '')
#log("Executing PUT to Create HDP-Utils Repo")
curl --silent --show-error -H "${requestedBy}" -X PUT -d '$hdpUtilsRepo' -u admin:admin $arguments.repositoriesHdpUtilsUrl
#end

#log("Executing POST to Install Cluster")
curl -s --show-error -H "${requestedBy}" -X POST -d '$createCluster' -u admin:admin $arguments.clustersUrl

#log("Cluster is being installed!  You can check progress here:  http://$arguments.fqdn:8080 or http://$arguments.hostname:8080")

SCRIPT

